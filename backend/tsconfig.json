{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "mocha"]
  },
  "include": ["hardhat.config.ts", "deploy", "scripts", "test", "tasks", "types", "contracts/**/*.sol"],
  "files": ["./hardhat.config.ts"]
}


